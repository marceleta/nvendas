<Linha_cliente>:
    
    nome_text: 'nome_text'
    codigo_text: 'cidade_text'
    fantasia_text: 'fantasia_text'

    Label:
        text: root.nome_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
        valign: 'center'
        size_hint: .7, 1
    
    Label:
        text: root.fantasia_text
        font_size: '15sp'
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size_hint: .7, 1

    Label:
        text: 'Codigo: {}'.format(root.codigo_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        size_hint: .7, 1
        valign: 'center'

<Lista_cliente>:
    name: 'lista_cliente'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing: '5dp'
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, .10
            Label:
                text:'Clientes'
                font_size: '20sp'
                size_hint: .1, .45
                pos_hint: {'x': .05, 'y': .3}
                text_size: self.size
                halign: 'left'
        BoxLayout:
            size_hint: 1, .07
            TextInput:
                hint_text: 'Pesquisar nome/cidade'
                size_hint: .7, 1
                text_size: self.size
            Button:
                text: 'Limpar'
                size_hint: .3, 1             
        
        #BoxLayout:
        #    size_hint: 1, .07
        #    Label:
        #        text: 'Nome'
        #        size_hint: .7, .7
        #        text_size: self.size
        #        halign: 'left'
        #    Label:
        #        text: 'Cidade'
        #        size_hint: .3, .7
        #        text_size: self.size
        #        halign: 'left'            
        
        BoxLayout:
            size_hint: 1, .7
            orientation: 'vertical'
            RecycleView:
                viewclass: 'Linha_cliente'
                id:recycle
                ClienteRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False
        GridLayout:
            size_hint: 1, .07
            cols:2
            Button:
                on_press: app.get_running_app().root.current = 'menu'
                text:'Voltar'
                size_hint: .5, .5
            Button:
                on_press: app.get_running_app().root.current = 'detalhe_cliente'
                text:'Novo Cliente'
                size_hint: .5, .5

