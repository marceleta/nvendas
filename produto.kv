<Linha_produto>:

    descricao_text: 'descricao_text'
    codigo_text: 'codigo_text'
    estoque_text: 'estoque_text'

    Label:
        text: 'Código: {}'.format(root.codigo_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
    Label:
        text: root.descricao_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
    Label:
        text: 'Estoque: {}'.format(root.estoque_text)
        text_size: self.size
        font_size: '10'
        halign: 'left'

<Linha_tabela>:

    descricao_text: 'descricao_text'
    preco_text: 'preco_text'

    Label:
        text:'[b]' + self.descricao_text + ['/b']
        text_size: self.size
        font_size: '20sp'
        halign: 'left'
    Label:
        text: self.preco_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'


<Lista_produto>:
    name: 'lista_produto'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing: '5dp'
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, .10
            Label:
                text: 'Produtos'
                font_size: '20sp'
                size_hint: .1, .45
                pos_hint: {'x':.05, 'y':.3}
                text_size: self.size
                halign: 'left'
        BoxLayout:
            size_hint: 1, .07
            TextInput:
                hint_text: 'Pesquisar produto'
                size_hint: .7, 1
                text_size: self.size
            Button:
                text: 'Limpar'
                size_hint: .3, 1

        BoxLayout:
            size_hint: 1, .7
            orientation: 'vertical'
            RecycleView:
                viewclass: 'Linha_produto'
                id:recycle_produto
                ProdutoRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self. size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(45)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False
            
        BoxLayout:
            size_hint: 1, .07
            orientation: 'vertical'
            Button:
                on_press: app.get_running_app().root.current = 'menu'
                text: 'Voltar'
                

