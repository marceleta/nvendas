    Label:
        text:'Preço: {}'.format(root.preco_text)
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
        valign: 'center'
        size_hint: .7, 1

<Qtd_popup>:
    id: quantidade_popup
    auto_dismiss: False
    size_hint: .7, .4
    title: 'Quantidade Produto'
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        GridLayout:
            cols:3
            rows:1
            size_hint: 1, .60
            Button:
                text: '-'
                font_size: '50sp'
            TextInput:
                id: txt_quantidade
                text: '10'
                multiline: False
                text_size: self.size
                font_size: '50sp'
            Button:
                text: '+'
                font_size: '50sp'
        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1, .40
            Button:
                text: 'Cancelar'
                on_press: root.dismiss()
            Button:
                text: 'Adicionar'
                on_press: root.adicionar()

<Existe_produto>:
    id: existe_produto
    auto_dismiss: True
    size_hint: .7, .3
    title: 'Produto'

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Produto já adicionado'
        BoxLayout:
            Button:
                text: 'Ok'
                on_press: root.dismiss()

<Remover_produto>:
    auto_dismiss: False
    size_hint: .7, .4
    title: 'Produto'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Deseja remover o produto?'
        BoxLayout:
            Button:
                text: 'Cancelar'
                on_press: root.dismiss()
            Button:
                text: 'Sim'
                on_press: root.remover()

