
<Lista_pedido>:
    name: 'lista_pedido'
    BoxLayout:
        orientation: 'vertical'
        spacing: '2dp'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Pedidos'
                font_size: '20sp'
                size_hint: .3, .30
                pos_hint: {'x': .05, 'y':.5}
                text_size: self.size
                halign: 'left'
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: .7, .2, .8, 1
                Rectangle:
                    pos: self.pos   
                    size: self.size
            TextInput:
                hint_text:'Pesquisar por cliente'
                size_hint: .7, 1
            Button:
                text: 'Limpar'
                size_hint: .3, 1
            
        BoxLayout:
            size_hint: 1, .75
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: .4, .6, .7, 1
                Rectangle:
                    pos: self.pos   
                    size: self.size

            RecycleView:
                viewclass: 'Linha_pedido'
                id: recycle_pedido
                PedidoClienteRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(80)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .10
            Button:
                text: 'Voltar'
                on_press: root.show_menu()
            Button:
                text: 'Novo Pedido'

<Linha_pedido>:

    num_pedido_text: 'num_pedido_text'
    cliente_text: 'cliente_text'
    data_criacao_text: 'data_criacao_text'
    data_envio_text: 'data_envio_text'
    valor_text: 'valor_text'
    situacao_text: 'situacao_text'

    Label:
        text: root.cliente_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Pedido: {}'.format(root.num_pedido_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'
    
    Label:
        text: 'Data criação: {}'.format(root.data_criacao_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Data envio: {}'.format(root.data_envio_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Valor: {}'.format(root.valor_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Situação: {}'.format(root.situacao_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'


<Selecao_cliente>:
    name: 'selecao_cliente'

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            canvas.before:
                Color:
                    rgba: .5, .7, .1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos            
            Label:
                text: 'Selecione o Cliente'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .06
            canvas.before:
                Color:
                    rgba: .2, .5, .9, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            TextInput:
                hint_text:'Pesquisa cliente'
                size_hint: .7, 1 
            Button:
                text: 'Limpar'
                size_hint: .3, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .80
            RecycleView:
                viewclass: 'Linha_pedido_cliente'
                id: recycle_pedido_cliente
                PedidoClienteRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .10
            Button:
                text: 'Voltar'
                on_press: root.voltar_menu()

<Linha_pedido_cliente>:

    codigo_text: 'codigo_text'
    nome_text: 'nome_text'
    fantasia_text: 'fantasia_text'

    Label:
        text: root.nome_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
    Label:
        text: root.fantasia_text
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
    Label:
        text: root.codigo_text
        text_size: self.size
        font_size: '10sp'
        halign: 'left'

<Selecao_forma_pagto>:
    name: 'selecao_forma_pagto'

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            
            GridLayout:
                cols: None
                rows: 2
                Label:
                    text: 'Cliente:'
                    text_size: self.size
                    font_size: '10sp'
                    halign: 'left'
                Label:
                    id: lb_cliente
                    text: ''
                    text_size: self.size
                    font_size: '20sp'
                    halign: 'left'            
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            Spinner:
                text: 'Un. Negócio: Filial 1'
                values: 'Un. Negócio: Filial 1', 'Un. Negócio: Filial 2'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            Spinner:
                text: 'Forma Pagamento'
                values: 'A Vista', 'Cheque', 'Boleto'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            Spinner:
                text: 'Prazo pagamento'
                values: '30 dias', '30/60 dias'
                on_release: print('selecionado')

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            Spinner:
                text: 'Orçamento'
                values: 'Sim', 'Não'
                on_release: print(self.text)

        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .60
            
        BoxLayout:
            size_hint: 1, .10
            Button:
                text:'Voltar'
                on_press: root.voltar_lista_cliente()
            Button:
                text:'Produtos'
                on_press: root.voltar_lista_cliente()



            
            
        



