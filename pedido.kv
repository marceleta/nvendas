
<Lista_pedido>:
    name: 'lista_pedido'
    BoxLayout:
        orientation: 'vertical'
        spacing: '2dp'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Pedidos'
                font_size: '20sp'
                size_hint: .3, .30
                pos_hint: {'x': .05, 'y':.5}
                text_size: self.size
                halign: 'left'
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: .7, .2, .8, 1
                Rectangle:
                    pos: self.pos   
                    size: self.size
            TextInput:
                hint_text:'Pesquisar por cliente'
                size_hint: .7, 1
            Button:
                text: 'Limpar'
                size_hint: .3, 1
            
        BoxLayout:
            size_hint: 1, .75
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: .4, .6, .7, 1
                Rectangle:
                    pos: self.pos   
                    size: self.size

            RecycleView:
                viewclass: 'Linha_pedido'
                id: recycle_pedido
                PedidoClienteRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(80)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .10
            Button:
                text: 'Voltar'
                on_press: root.show_menu()
            Button:
                text: 'Novo Pedido'

<Linha_pedido>:

    num_pedido_text: 'num_pedido_text'
    cliente_text: 'cliente_text'
    data_criacao_text: 'data_criacao_text'
