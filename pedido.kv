        halign: 'left'
        valign: 'center'
    
    Label:
        text: 'Data criação: {}'.format(root.data_criacao_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Data envio: {}'.format(root.data_envio_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Valor: {}'.format(root.valor_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'

    Label:
        text: 'Situação: {}'.format(root.situacao_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'


<Selecao_cliente>:
    name: 'selecao_cliente'

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .10
            canvas.before:
                Color:
                    rgba: .5, .7, .1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos            
            Label:
                text: 'Selecione o Cliente'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .06
            canvas.before:
                Color:
                    rgba: .2, .5, .9, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            TextInput:
                hint_text:'Pesquisa cliente'
                size_hint: .7, 1 
            Button:
                text: 'Limpar'
                size_hint: .3, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .80
            RecycleView:
                viewclass: 'Linha_pedido_cliente'
                id: recycle_pedido_cliente
                PedidoClienteRecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba: .5, .5, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .10
            Button:
                text: 'Voltar'
                on_press: root.voltar_menu()

<Linha_pedido_cliente>:


    codigo_text: 'codigo_text'
    nome_text: 'nome_text'
    fantasia_text: 'fantasia_text'

    Label:
        text: root.nome_text
        text_size: self.size
        font_size: '15sp'
        halign: 'left'
    Label:
        text: root.fantasia_text
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
    Label:
        text: root.codigo_text
        text_size: self.size
        font_size: '10sp'
        halign: 'left'

<Pedido>:
    name: 'pedido'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Rectangle:
            size: self.size
            pos: self.pos

    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'Detalhe'
            font_size: '15sp'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .10                    
                    GridLayout:
                        cols: None
                        rows: 2
                        Label:
                            text: 'Cliente:'
                            text_size: self.size
                            font_size: '10sp'
                            halign: 'left'
                        Label:
                            id: lb_cliente
                            text: ''
                            text_size: self.size
                            font_size: '20sp'
                            halign: 'left'            
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .15
                    Label:
                        text: 'Filial'
                        text_size: self.size
                        font_size: '10sp'
                        size_hint: .7, .03
                    Spinner:
                        text: 'Filial 1'
                        values: 'Filial 1', 'Filial 2'
                        text_size: self.size
                        font_size: '30sp'
                        size_hint: .7, .12

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .15
                    Label:
                        text: 'Forma pagamento'
                        size_hint: 1, .03
                        text_size: self.size
                        font_size: '10sp'
                    Spinner:
                        size_hint: .7, .12
                        text_size: self.size
                        font_size: '30sp'
                        text: 'A Vista'
                        values: 'A Vista', 'Cheque', 'Boleto'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .15
                    Label:
                        size_hint: 1, .03
                        text: 'Prazo pagamento'
                        text_size: self.size
                        font_size: '10sp'                
                    Spinner:
                        size_hint: .7, .12
                        text: 'A Vista'
                        values: 'A Vista', '30 dias', '30/60 dias', '30/60/90 dias'
                        text_size: self.size
                        font_size: '30sp'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, .15
                    Label:
                        text: 'Orçamento'
                        text_size: self.size
                        font_size: '10sp'
                        size_hint: .5, .03
                    Spinner:
                        text: 'Não'
                        values: 'Sim', 'Não'
                        on_release: print(self.text)
                        text_size: self.size
                        font_size: '30sp'
                        size_hint: .7, .12

                BoxLayout:
                    size_hint: 1, .20

                BoxLayout:
                    size_hint: 1, .10
                    Button:
                        text:'Voltar'
                        on_press: root.voltar_lista_cliente()
                    Button:
                        text: 'Fechar'

        TabbedPanelItem:
            text:'Produtos'
            font_size: '15dp'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .90
                    canvas.before:
                        Color:
                            rgba: .1, .6, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    RecycleView:
                        viewclass: 'Item_pedido'
                        id: recycle_item_pedido
                        ItemPedidoRecycleGridLayout:
                            spacing: dp(2)
                            cols: 1
                            default_size: None, dp(50)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            multiselect: False
                            touch_multiselect: False

                BoxLayout:
                    size_hint: 1, .10
                    Label:
                        text: 'Total itens:'
                    Label:
                        text: root.total_itens
                    Label:
                        text: 'Total pedido:'
                    Label:
                        text: root.total_pedido


                BoxLayout:
                    size_hint: 1, .10
                    canvas.before:
                        Color:
                            rgba: .1, .6, .5, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Button:
                        text: 'Adicionar'
                        on_press: root.show_adicionar_produto()

<Label_menor@Label>:
    font_size: '10sp'
    text_size: self.size
    halign: 'left'
<Label_maior@Label>:
    font_size: '15sp'
    text_size: self.size
    halign: 'left'

<Item_pedido>:

    descricao_text: 'descricao_text'
    codigo_text: 'codigo_text'
    quantidade_text: 'quantidade_text'
    preco_text: 'preco_text'
    total_text: 'total_text'

    #Label_menor:
    #    text: 'Código: {}'.format(root.codigo_text)
    Label_maior:
        text: root.descricao_text
    GridLayout:
        cols: 2
        rows: 1
        size_hint: .5, 1
        Label_menor:
            text: 'Quantidade: {}'.format(root.quantidade_text)
        Label_menor:
            text: 'Preço: {}'.format(root.preco_text)
    Label_maior:
        text: 'Total: {}'.format(root.total_text)


<Produto_pedido>:
#Lista de produtos para adicionar ao pedido
    name: 'produto_pedido'

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            id: actBarListaProduto
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Pedido'
                    on_release: app.root.current = 'pedido'

        BoxLayout:
            size_hint: 1, .80
            RecycleView:
                viewclass: 'Linha_produto_pedido'
                id: recycle_produto_lista
                LinhaProdutoRecycleGridLayout:
                    spacing: dp(2)
                    cols: 1
                    default_size: None, dp(60)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False

        BoxLayout:
            size_hint: 1, .10
            BoxLayout:
                orientation: 'horizontal'
                TextInput:
                    size_hint: .7, 1
                Button:
                    text: 'Pesquisar'
                    size_hint: .3, 1
                        

<Linha_produto_pedido>:

    codigo_text: 'codigo_text'
    descricao_text: 'descricao_text'
    preco_text: 'preco_text'

    Label:
        text:'Código: {}'.format(root.codigo_text)
        text_size: self.size
        font_size: '10sp'
        halign: 'left'
        valign: 'center'
